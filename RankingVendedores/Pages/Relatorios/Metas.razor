@page "/relatorios/metas"
@using MudBlazor

<PageTitle>Relatório de Metas</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Class="p-4">
        <MudText Typo="Typo.h5" GutterBottom="true">🎯 Relatório de Metas</MudText>
        <MudDivider Class="mb-4" />

        <MudText Typo="Typo.body1" Class="mb-4">
            Consulte o progresso e os resultados das metas estabelecidas para sua equipe.
        </MudText>

        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">
            🚧 Em construção: aqui serão exibidos gráficos de metas atingidas vs. metas definidas.
        </MudAlert>
    </MudPaper>
</MudContainer>
