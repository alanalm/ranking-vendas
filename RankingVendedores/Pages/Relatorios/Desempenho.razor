@page "/relatorios/desempenho"
@using MudBlazor

<PageTitle>Relatório de Desempenho</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudPaper Class="p-4">
        <MudText Typo="Typo.h5" GutterBottom="true">📈 Relatório de Desempenho</MudText>
        <MudDivider Class="mb-4" />

        <MudText Typo="Typo.body1" Class="mb-4">
            Aqui você poderá visualizar o desempenho individual de cada funcionário, com base nas metas e indicadores.
        </MudText>

        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">
            🚧 Em construção: em breve você poderá filtrar por funcionário e ver os gráficos de desempenho.
        </MudAlert>
    </MudPaper>
</MudContainer>
